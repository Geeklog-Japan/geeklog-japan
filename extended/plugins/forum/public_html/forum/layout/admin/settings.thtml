
<!-- start settings.thtml -->
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td>
            <form action="{phpself}" method="post">
            
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td class="pluginCellTitle alignleft">{LANG_gensettings}</td>
                </tr>
            </table>
            <table width="100%" border="0" cellspacing="1" cellpadding="3" class="pluginSolidOutline" style="margin-bottom:1em">
                {group1_options}
            </table>

            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td class="pluginCellTitle alignleft">{LANG_topicsettings}</td>
                </tr>
            </table>
            <table width="100%" border="0" cellspacing="1" cellpadding="3" class="pluginSolidOutline" style="margin-bottom:1em">
                {group2_options}
            </table>

            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td class="pluginCellTitle alignleft">{LANG_cbsettings}</td>
                </tr>
            </table>
            <table width="100%" border="0" cellspacing="1" cellpadding="3" class="pluginSolidOutline" style="margin-bottom:1em">
                {group3_options}
                <tr>
                    <td class="pluginCellSubTitle" style="width:160;">{LANG_cbposition}</td>
                    <td class="pluginCellText pluginCellFill">
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <td style="padding-right:15px;">{LANG_cbpositiondscp}</td>
                                <td style="text-align:right;">{pos_selection}</td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>

            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td class="pluginCellTitle alignleft">{LANG_blocksettings}</td>
                </tr>
            </table>
            <table width="100%" border="0" cellspacing="1" cellpadding="3" class="pluginSolidOutline" style="margin-bottom:1em">
                {group4_options}
            </table>

            <table width="100%" border="0" cellspacing="0" cellpadding="0">
               <tr>
                   <td class="pluginCellTitle alignleft">{LANG_ranksettings}</td>
               </tr>
            </table>
            <table width="100%" border="0" cellspacing="1" cellpadding="3" class="pluginSolidOutline" style="margin-bottom:1em">
                {ranking_options}
            </table>

            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td style="padding:10px;text-align:right;">
                        <input style="padding:3px;" type="submit" name="submit" value="{LANG_savesettings}"{xhtml}>
                        <input type="hidden" name="savesettings" value="yes"{xhtml}>
                        <input type="hidden" name="{gltoken_name}" value="{gltoken}"{xhtml}>
                    </td>
                </tr>
            </table>
            </form>
        </td>
    </tr>
</table>
<!-- end settings.thtml -->
